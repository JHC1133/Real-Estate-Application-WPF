<Application x:Class="ModernRealEstates.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:ModernRealEstates"
             xmlns:viewModel="clr-namespace:ModernRealEstates.MVVM.ViewModel" 
             xmlns:view="clr-namespace:ModernRealEstates.MVVM.View">
    
    <Application.Resources>
        
        <DataTemplate DataType="{x:Type TypeName=viewModel:HomeViewModel}">
            <view:HomeView/>
        </DataTemplate>

        <DataTemplate DataType="{x:Type TypeName=viewModel:SettingsViewModel}">
            <view:SettingsView/>
        </DataTemplate>

        <DataTemplate DataType="{x:Type TypeName=viewModel:ShowViewModel}">
            <view:ShowView/>
        </DataTemplate>

        <DataTemplate DataType="{x:Type TypeName=viewModel:AddViewModel}">
            <view:AddView/>
        </DataTemplate>

        <DataTemplate DataType="{x:Type TypeName=viewModel:ChangeViewModel}">
            <view:ChangeView/>
        </DataTemplate>

        <DataTemplate DataType="{x:Type TypeName=viewModel:DeleteViewModel}">
            <view:DeleteView/>
        </DataTemplate>

    </Application.Resources>
</Application>
